                    <th>Numero de cuenta</th>
                    <th>CBU</th>
                    <th>Alias CBU</th>
                    <th>Saldo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.CuentasDolar)
                {
